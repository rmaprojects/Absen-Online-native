<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewData"
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="?containerColor"
        style="@style/Widget.Material3.CardView.Outlined"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_height="200dp">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tanggalAbsen"
                android:layout_width="match_parent"
                android:text="Loading..."
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:text="Status Absen:"
                android:layout_marginTop="8dp"
                android:textColor="@color/material_on_surface_emphasis_medium"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/statusIconDay"
                            android:text="Pagi"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:drawablePadding="8dp"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_sudah_absen"
                            />
                    </LinearLayout>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/jamPagi"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/statusIconNoon"
                            android:text="Siang"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:drawablePadding="8dp"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_sudah_absen"
                            />
                    </LinearLayout>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:text=""
                        android:id="@+id/jamSiang"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:text="Pulang"
                            android:id="@+id/statusIconHome"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:drawablePadding="8dp"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_sudah_absen"
                            />
                    </LinearLayout>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:text=""
                        android:id="@+id/jamPulang"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/noDataCardView"
        android:layout_margin="12dp"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_height="120dp">
            <TextView
                android:layout_width="match_parent"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:text="Data nggak ada nih..."
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:text="Mungkin kamu belum pernah absen sebelumnya atau kamu belum mengisi absen"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:id="@+id/izinCardView"
        android:layout_margin="12dp"
        app:cardBackgroundColor="?colorIzinOrCutiContainer"
        style="@style/Widget.Material3.CardView.Elevated"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:layout_height="120dp">
            <TextView
                android:id="@+id/tanggalIzin"
                android:textColor="?colorIzinOrCutiText"
                android:layout_width="match_parent"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:text="Loading..."
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="?colorIzinOrCutiText"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:text="Kamu izin/cuti di hari ini"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>